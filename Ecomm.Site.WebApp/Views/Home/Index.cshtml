@section Header  {
    @Styles.Render("~/Content/plugins/owl-carousel")

    <style>
        #owl-product-list .item{
        }
        #owl-sellers-list .owl-pagination, #owl-product-list .owl-pagination{
            display:none;
        }
        .customNavigation{
          text-align: center;
        }
        .customNavigation a{
          -webkit-user-select: none;
          -khtml-user-select: none;
          -moz-user-select: none;
          -ms-user-select: none;
          user-select: none;
          -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
        }
    </style>
}
@section scripts  {
    @Scripts.Render("~/bundles/plugins/owl-carousel")
    <script>
        $(document).ready(function () {
            //product-list start
            var owl = $("#owl-product-list");
            owl.owlCarousel({
                lazyLoad: true,
                navigation: false, // Show next and prev buttons
                slideSpeed: 300,
                paginationSpeed: 400,
                items: 3
            });
            // Custom Navigation Events
            $(".product-next").click(function () {
                owl.trigger('owl.next');
            })
            $(".product-pre").click(function () {
                owl.trigger('owl.prev');
            })
            //----------product-list end-------
            //
            var owl_sellers = $("#owl-sellers-list");
            owl_sellers.owlCarousel({
                lazyLoad: true,
                navigation: false, // Show next and prev buttons
                slideSpeed: 300,
                paginationSpeed: 400,
                items: 3
            });
            // Custom Navigation Events
            $(".sellers-next").click(function () {
                owl_sellers.trigger('owl.next');
            })
            $(".sellers-pre").click(function () {
                owl_sellers.trigger('owl.prev');
            })

        });
    </script>
}