@{
    ViewBag.Title = "Home Page";
}

<div class="clearfix"></div>
<!-- Slides -->
@if (ViewBag.Slides != null)
{
    @Html.Raw(ViewBag.Slides)
}
<!-- mid AD -->
@if (ViewBag.mid_Ad != null)
{
    @Html.Raw(ViewBag.mid_Ad)
}
<!-- Today and product -->
<div class="products">
    <div class="today-deals">
        <h3>TODAY DEALS</h3>
        <div class="product-show">
            @if (ViewBag.Today != null)
            {
                @Html.Raw(ViewBag.Today)
            }
        </div>
    </div>
    <div class="popular-products">
        <div class="popular-title">
            <h3>POPULAR PRODUCTS</h3>
            <div class="pull-right customNavigation">
                <a href="javascript:;" class="product-pre"><i class="fa fa-angle-left"></i></a>
                <a href="javascript:;" class="product-next"><i class="fa fa-angle-right"></i></a>
            </div>
        </div>
        <div class="product-list owl-carousel owl-theme" id="owl-product-list">
            @if (ViewBag.PopularProducts != null)
            {
                @Html.Raw(ViewBag.PopularProducts)
            }
        </div>
    </div>
    <div class="best-sellers">
        <div class="sellers-title">
            <h3>BEST SELLERS</h3>
            <div class="pull-right customNavigation">
                <a href="javascript:;" class="sellers-pre"><i class="fa fa-angle-left"></i></a>
                <a href="javascript:;" class="sellers-next"><i class="fa fa-angle-right"></i></a>
            </div>
        </div>
        <div class="sellers-list"  id="owl-sellers-list">
            @if (ViewBag.BestSellers != null)
            {
                @Html.Raw(ViewBag.BestSellers)
            }
        </div>
    </div>
</div>
