@using Ecomm.Site.Models.EpSnell.Rela_contact;
@section Header  {
    <style>
        .products .popular-products {
    margin-left: 0px;
    width: 100%;
    margin-bottom: 20px;
}
        .table{
            margin-bottom:0px;
        }
    </style>
}
<div class="clearfix"></div>

<div class="products">
    <ol class="breadcrumb">
        <li><a href="#">My Office</a></li>
        <li class="active">User Manager</li>
    </ol>
    <div class="popular-products">
        <div class="popular-title">
            <h3>User Manager</h3>
        </div>
        <div id="list" class="product-list" style="min-height: 150px;height: auto;">
            <table class="table table-hover">
                <tr style="color: #003975;font-weight: bold;">
                    <th style="width: 17%">Name</th>
                    <th style="width: 10%">Phone</th>
                    <th style="width: 10%">Mobile</th>
                    <th style="width: 10%">Is Manager</th>
                    <th style="width: 10%">User Name</th>
                    <th style="width: 10%">Password</th>
                    <th style="width: 13%">Amount Limit</th>
                    <th style="width: 10%">Edit</th>
                    <th style="width: 10%">Locations</th>
                </tr>
@if (ViewBag.UsersModel != null)
            {
                IQueryable<Rela_contactModel> um = (IQueryable<Rela_contactModel>)ViewBag.UsersModel;
                var users = um.ToList();
                if (users.Count() > 0)
                {
                    foreach (var user in users)
                    {
                <tr style="color: #8B8770;font-size: 12px;">
                    <td>@user.Name</td>
                    <td>@user.Phone1</td>
                    <td>@user.Mobile</td>
                    <td>@user.IsManager</td>
                    <td>@user.UserName</td>
                    <td>@user.Password</td>
                    <td>@user.AmountLimit</td>
                    <td>
                        <a href="@Url.Action("UserInfor", "Office", new { id = user.Id })"><span class="glyphicon glyphicon-pencil"></span></a>
                    </td>
                    <td>
                        <a href="@Url.Action("SyncLocation", "Office", new { id = user.Id })"><span class="glyphicon glyphicon-log-in"></span></a>
                    </td>
                </tr>
        }
}
}
            </table>
        </div>
        <div class="clearfix"></div>

    </div>
</div>
