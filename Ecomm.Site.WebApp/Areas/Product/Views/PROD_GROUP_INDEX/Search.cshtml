@using Ecomm.Site.Models.Product.PROD_GROUP_INDEX
@using Ecomm.Site.Models.AdminCommon
@model SearchModel
@{
    var createButton = new ButtonModel();
    createButton = ViewBag.Create;
}

<div class="widget-box">
    <div class="widget-title">
        <span class="icon"><i class="icon-search"></i></span>
        <h5>Query conditions</h5>
    </div>
    <div class="widget-content nopadding">
        <form class="form-horizontal search-form" method="post" name="basic_validate" novalidate="novalidate">

            <div class="control-group">
                <div class="search-group">
                    <label class="search-label">@Html.DisplayNameFor(t => t.Name)</label>
                    <div class="span2 search-input">
                        @Html.TextBoxFor(t => t.Name)
                    </div>
                </div>

                <div class="search-group">
                    <label class="search-label">@Html.DisplayNameFor(t => t.ParentName)</label>
                    <div class="span2 search-input">
                        @Html.DropDownListFor(t => t.ParentID, Model.ParentGroupItems)
                    </div>
                </div>
                <div class="search-group">
                    <label class="search-label">@Html.DisplayNameFor(t => t.Status)</label>
                    <div class="span2 search-input">
                        @Html.DropDownListFor(t => t.Status, Model.EnabledItems)
                    </div>
                </div>
            </div>


            <div class="form-actions form-operate text-right ">
                <button type="button" class="btn btn-danger" onclick="ClearForm($('.search-form'));">
                    <span class="icon-bullhorn"></span> Clear
                </button>
                <button type="button" class="btn btn-success" onclick="Search()">
                    <span class="icon-search"></span> Query
                </button>
                @if (createButton != null)
                {
                    <button type="button" class="btn btn-primary" onclick="Create()">
                        <span class="@createButton.Icon"></span> @createButton.Text
                    </button>
                }
            </div>

        </form>

    </div>
</div>


